{
  "name": "node-api",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV='dev' nodemon -L",
    "prod": "cross-env NODE_ENV='prod' yarn build && node public/dist/app.js",
    "build": "rm -rf public/dist && tsc",
    "migrate:up": "yarn typeorm schema:sync",
    "migrate:down": "yarn typeorm schema:drop",
    "migrate:create": "yarn typeorm migration:generate --name",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "fmt": "prettier --write src/**/*.ts"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/mysql": "^2.15.17",
    "@types/node": "^14.14.17",
    "cross-env": "^7.0.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "typeorm": "^0.2.29"
  }
}
