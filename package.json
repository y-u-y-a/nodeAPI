{
  "name": "node-api",
  "version": "1.0.0",
  "description": "api by node.js",
  "main": "app.js",
  "author": "yuya",
  "license": "ISC",
  "scripts": {
    "dev": "cross-env NODE_ENV='dev' nodemon -L",
    "prod": "cross-env NODE_ENV='prod' yarn build && node dist/app.js",
    "build": "rm -rf dist && tsc",
    "migrate:sync": "yarn build && typeorm schema:sync",
    "migrate:drop": "yarn build && typeorm schema:drop",
    "migrate:prod": "yarn build && typeorm migration:run",
    "fmt": "prettier --write src/**/*.ts",
    "ts-node": "ts-node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/mysql": "^2.15.17",
    "@types/node": "^14.14.17",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "typeorm": "^0.2.29"
  }
}
